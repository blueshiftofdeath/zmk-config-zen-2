#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define SYM     1
#define NUM     2
#define NAV     3
#define FUN     4
#define STENO   5

/ {
  chosen {
    zmk,matrix_transform = &default_transform;
    //zmk,matrix_transform = &five_column_transform;
  };
};

&sk {
    quick-release;
};

/ {
    macros {
        to_steno: to_steno {
            label = "TO_STENO";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LGUI>
                , <&macro_tap &kp SPACE>
                , <&macro_release &kp LGUI>
                , <&macro_tap &kp P &kp L &kp O &kp V &kp E &kp R &kp RET>
                , <&macro_press &kp LGUI>
                , <&macro_tap &kp DOT>
                , <&macro_release &kp LGUI>
                , <&macro_tap &to STENO>
                ;
        };
        from_steno: from_steno {
            label = "FROM_STENO";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LGUI>
                , <&macro_tap &kp SPACE>
                , <&macro_release &kp LGUI>
                , <&macro_tap &kp P>
                , <&macro_press &kp LGUI>
                , <&macro_tap &kp DOT>
                , <&macro_release &kp LGUI>
                , <&macro_tap &to DEFAULT>
                ;
        };
    };
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <220>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        
        bhm: balanced_homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <220>;    // <---[[moderate duration]]
            quick-tap-ms = <0>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };
    };
    
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "DVORAK";
// -----------------------------------------------------------------------------------------
// |      |  ;  |  ,  |  .  |  P  |  Y  |   |  F  |  G   |  C  |  R  |  L  | SHFT |
// | ESC  |  A  |  O  |  E  |  U  |  I  |   |  D  |  H   |  T  |  N  |  S  |  -   |
// | CAPS |  '  |  Q  |  J  |  K  |  X  |   |  B  |  M   |  W  |  V  |  Z  | SHFT*|
//                    | FUN | ENT | TAB |   | TAB | SPC  | ALT |
                        bindings = <
   &trans    &kp SEMI     &kp COMMA  &kp DOT &kp P       &kp Y          &kp F   &kp G &kp C &kp R &kp L &kp LSHIFT
   &kp ESC   &hm LCTRL A  &hm LALT O &lt 3 E &hm LSHFT U &kp I          &kp D   &hm LSHFT H &kp T    &kp N &kp S &kp MINUS
   &kp CAPS  &hm LALT SQT &kp Q      &kp J   &kp K       &kp X          &kp B   &kp M       &kp W    &kp V &kp Z &sk LSHIFT
                                       &mo 4   &lt 1 RET   &mt LGUI TAB   &kp TAB &lt 2 SPACE &kp RALT
                        >;
                };

                raise_layer {
                        label = "SYMBOL";
// -----------------------------------------------------------------------------------------
// | STNO |  &  |  ?  |  !   |  $   |  %  |   |  `  |  #  |  *  |  /  |  \  | BKSP |
// | CTRL |  {  |  [  |  :   |  (   |  =  |   |  ~  |  )  |  +  |  ]  |  }  |  -   |
// | SHFT |  "  | DEL |  -  | BKSP |     |   |  _  |  @  |  ^  |  _  | "|" |  ~   |
//                    | GUI  |      | SPC |   | ENT |     | ALT |
                        bindings = <
   &to_steno   &kp AMPS       &kp QMARK      &kp EXCL  &kp DLLR       &kp PRCNT   &kp GRAVE &kp HASH  &kp STAR &kp FSLH  &kp BSLH &kp BSPC
   &kp LCTRL   &hm LCTRL LBRC &hm LALT LBKT  &kp COLON &hm LSHFT LPAR &kp EQUAL   &kp TILDE &kp RPAR  &kp PLUS        &kp RBKT  &kp RBRC &kp MINUS
   &kp LSHFT   &hm LALT DQT   &kp DELETE     &kp MINUS  &kp BSPC       &trans      &kp UNDER &kp AT    &kp CARET       &kp UNDER &kp PIPE &kp TILDE
                    	     &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };
                
                lower_layer {
                        label = "NUMBER";
// -----------------------------------------------------------------------------------------
// | BASE |  &  |  ,  |  .  |  $  |  %  |   |  `  |  #  |  *  |  /  |  \  | BKSP |
// | BTCLR|  7  |  5  |  3  |  1  |  9  |   |  8  |  0  |  2  |  4  |  6  |      |
// | SHFT |  "  |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &to DEFAULT &kp AMPS     &kp COMMA  &kp DOT  &kp DLLR &kp PRCNT   &kp GRAVE &kp HASH  &kp STAR &kp FSLH  &kp BSLH &kp BSPC
   &bt BT_CLR  &kp N7       &kp N5     &kp N3   &kp N1   &kp N9      &kp N8    &kp N0    &kp N2          &kp N4    &kp N6   &trans
   &kp LSHFT   &hm LALT DQT &kp DELETE &kp BSPC &kp BSPC &trans      &kp UNDER &kp AT    &kp CARET       &kp UNDER &kp PIPE &kp TILDE
                          	  &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
                        >;
                };

                nav_layer {
                        label = "NAV";
// -----------------------------------------------------------------------------------------
// | BASE |  1  |  2  |  3  |  4  |  5  |   |  6  | LFT | RGT |  9  |  0  | BKSP |
// | BTCLR| CTL | ALT |     | SFT |     |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT | BT3 | BT2 | BT1 |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &to DEFAULT &trans    &trans   &trans   &trans    &trans      &kp N6   &kp LEFT &kp RIGHT &kp N9    &kp N0 &kp BSPC
   &bt BT_CLR  &kp LCTRL &kp LALT &trans   &kp LSHFT &trans      &kp LEFT &kp DOWN &kp UP    &kp RIGHT &trans &trans
   &kp LSHFT   &kp LALT  &trans   &trans   &trans    &trans      &trans   &trans   &trans    &trans    &trans &trans
                          	     &kp LGUI &trans    &kp LGUI    &kp RET  &trans   &kp RALT
                        >;
                };

                fun_layer {
                        label = "FUNC";
// -----------------------------------------------------------------------------------------
// | BASE |  1  |  2  |  3  |  4  |  5  |   | BR+ | PRV | NXT | PLY |  0  | PSCRN |
// | BTCLR| BT3 | BT2 | BT1 | BT4 | BT5 |   | BR- | V-  | V+  | MUT |     |       |
// | SHFT | BT3 | BT2 | BT1 |     |     |   |     | BT1 | BT2 | BT3 | BT4 | BT5   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &to DEFAULT &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp C_BRI_UP &kp C_PREV   &kp C_NEXT   &kp C_PP     &kp N0       &kp PSCRN
   &bt BT_CLR  &bt BT_SEL 2 &bt BT_SEL 1 &bt BT_SEL 0 &bt BT_SEL 3 &bt BT_SEL 4   &kp C_BRI_DN &kp C_VOL_DN &kp C_VOL_UP &kp C_MUTE   &trans       &trans
   &kp LSHFT   &bt BT_SEL 2 &bt BT_SEL 1 &bt BT_SEL 0 &trans       &trans         &trans       &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4
                          	        &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
                        >;
                };

                steno_layer {
                        label = "STENO";
// -----------------------------------------------------------------------------------------
// | BASE |  1  |  2  |  3  |  4  |  5  |   |  6  | LFT | RGT |  9  |  0  | BKSP |
// |  T   |  Q  |  W  |  E  |  R  |  T  |   |  U  |  I  |  O  |  P  |  [  |  Y
// |  G   |  A  |  S  |  D  |  F  |  G  |   |  J  |  K  |  L  |  ;  |  '  |  H
//                    |     |  C  |  V  |   |  N  |  M  |     |
                        bindings = <
   &from_steno &trans &trans  &trans  &trans &trans     &kp N6  &trans &trans &trans &trans   &kp BSPC
   &kp T       &kp Q  &kp W   &kp E   &kp R  &kp T      &kp U  &kp I  &kp O  &kp P    &kp LBRC &kp Y
   &kp G       &kp A  &kp S   &kp D   &kp F  &kp G      &kp J  &kp K  &kp L  &kp SEMI &kp SQT &kp H
                          	  &trans  &kp C  &kp V      &kp N   &kp M  &trans
                        >;
                };
        };
};
